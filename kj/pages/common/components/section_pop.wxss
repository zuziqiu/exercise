.buy_course_pop_outer {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 100%;
  display: none;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
}
.buy_course_pop_outer .buy_course_pop {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  z-index: 999;
  -webkit-box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  background-color: #fff;
  line-height: 45px;
  font-size: 17px;
  color: #333;
}
.buy_course_pop_outer .buy_course_pop .buy_course_pop_tit {
  text-align: center;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
}
.buy_course_pop_outer .buy_course_pop .buy_course_pop_tit .buy_course_pop_close {
  position: absolute;
  right: 0;
  top: 0;
  width: 13.5px;
  height: 13.5px;
  padding: 15.75px;
  background-color: red;
  background-size: 13.5px;
}
.buy_course_pop_outer .buy_course_pop .buy_course_pop_con {
  height: 45px;
  border-bottom: 1px solid #e5e5e5;
}
.buy_course_pop_outer .buy_course_pop .buy_course_pop_con .buy_course_pop_con_tit {
  font-size: 16px;
  text-align: left;
  float: left;
  margin-left: 16px;
  color: #999;
}
.buy_course_pop_outer .buy_course_pop .buy_course_pop_con .buy_course_pop_con_con {
  text-align: right;
  float: right;
  margin-right: 16px;
  font-size: 16px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 240px;
}
.buy_course_pop_outer .buy_course_pop .buy_course_pop_buy .buy_course_pop_buy_btn {
  margin: 12px;
  border-radius: 4px;
  background-color: #3ac9ab;
}
.buy_course_pop_outer .buy_course_pop .buy_course_pop_buy .buy_course_pop_buy_btn .buy_course_pop_buy_btn_a {
  display: block;
  text-align: center;
  color: #fff;
  font-size: 17px;
}
.free_course_pop_outer {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  z-index: 10000;
}
.free_course_pop_outer .free_course_pop {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 100px;
  height: 100px;
  margin-bottom: -50px;
  margin-left: -50px;
  background-color: #fff;
  border-radius: 5px;
  -webkit-box-shadow: 0 1px 8px rgba(0, 0, 0, 0.2);
  box-shadow: 0 1px 8px rgba(0, 0, 0, 0.2);
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding-top: 19px;
}
.free_course_pop_outer .free_course_pop .free_course_pop_icon {
  display: block;
  margin: 0 auto;
  width: 33px;
  height: 33px;
  background-color: red;
  background-size: 33px;
}
.free_course_pop_outer .free_course_pop .free_course_pop_tip {
  margin-top: 10px;
  text-align: center;
  font-size: 14px;
  color: #333;
}
