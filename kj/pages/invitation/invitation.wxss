.main {
  text-align: center;
  background-color: #ffffff;
}
.main #canvas {
  width: 73%;
  margin: 15px auto 20px;
}
.main #canvas .canvas_car {
  width: 100%;
  min-height: 392px;
  margin: 0 auto 40px;
}
.main #canvas .canvas_car image {
  width: 100%;
  height: 100%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}
.main #canvas .invitation_profit {
  color: #333333;
  font-size: 0.8rem;
  margin-bottom: 20px;
}
.main #canvas .invitation_profit .profit_detials {
  color: #ffa113;
  font-size: 0.8rem;
}
.main #canvas .choose_theme {
  outline: none;
  border: 1px solid #3ac9ab;
  border-radius: 4px;
  width: 150px;
  height: 36px;
  color: #3ac9ab;
  line-height: 31px;
  font-size: 0.8rem;
  text-align: center;
  margin-bottom: 15px;
  background-color: #ffffff;
}
.main #canvas .invitation_share dd {
  text-align: center;
  color: #999999;
  font-size: 0.7rem;
  line-height: 1.2rem;
}
.main #canvas .invitation_explain {
  text-align: left;
}
.main #canvas .invitation_explain dt {
  color: #333333;
  font-size: 0.8rem;
  margin-bottom: 4px;
}
.main #canvas .invitation_explain dd {
  color: #999999;
  font-size: 0.7rem;
  line-height: 1.2rem;
}
.main #canvas .invitation_explain dd span {
  color: #ffa113;
}
.main #canvas .invitation_explain dd.img_box {
  margin-top: 14px;
  text-align: center;
}
.main #canvas .invitation_explain dd.img_box .course_detail_qrcode {
  width: 100px;
  height: 100px;
  display: inline-block;
}
.main #canvas .invitation_explain dd.img_box .press_tips {
  vertical-align: top;
  height: 90px;
  padding-top: 6px;
  margin-left: 11px;
  text-align: center;
  display: inline-block;
}
.main #canvas .invitation_explain dd.img_box .press_tips image {
  width: 60px;
  height: 60px;
  margin-bottom: 8px;
}
.main #canvas .invitation_explain dd.img_box .press_tips p {
  font-size: 13px;
  line-height: 13px;
  color: #333333;
}
.main .invitation_car {
  background-size: 640px 1136px;
  background-repeat: no-repeat;
  width: 640px;
  height: 1136px;
}
.main .invitation_car .user_imf {
  width: 70%;
  margin: 0 auto;
  padding-top: 156px;
  border-bottom: 1px solid #eeeeee;
}
.main .invitation_car .user_imf image {
  width: 122px;
  height: 122px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 22px;
}
.main .invitation_car .user_imf .talk_fun_assistant {
  font-size: 24px;
  color: #333;
  margin-bottom: 18px;
}
.main .invitation_car .user_imf .invitation_describe {
  font-size: 21px;
  color: #999999;
  margin-bottom: 40px;
}
.main .invitation_car .user_imf .course_title {
  font-size: 42px;
  line-height: 54px;
  color: #333;
  margin-bottom: 10px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.main .invitation_car .user_imf .name {
  font-size: 32px;
  color: #666666;
  padding-bottom: 38px;
}
.main .invitation_car .course_imf {
  width: 70%;
  margin: 0 auto;
  text-align: center;
  padding-top: 30px;
  overflow: hidden;
}
.main .invitation_car .course_imf .course_time,
.main .invitation_car .course_imf .inviter_ifm {
  margin-bottom: 18px;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  /*水平居中*/
  -webkit-justify-content: center;
  /*水平居中*/
  justify-content: center;
  /*水平居中*/
}
.main .invitation_car .course_imf .course_time .course_time_title,
.main .invitation_car .course_imf .inviter_ifm .course_time_title,
.main .invitation_car .course_imf .course_time .inviter_ifm_title,
.main .invitation_car .course_imf .inviter_ifm .inviter_ifm_title {
  font-size: 28px;
  color: #999999;
  float: left;
  min-width: 84px;
  display: inline-block;
}
.main .invitation_car .course_imf .course_time .course_time_detail,
.main .invitation_car .course_imf .inviter_ifm .course_time_detail,
.main .invitation_car .course_imf .course_time .inviter_ifm_detail,
.main .invitation_car .course_imf .inviter_ifm .inviter_ifm_detail {
  font-size: 28px;
  color: #999999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-align: left;
}
.main .invitation_car .course_imf .inviter_ifm .inviter_ifm_title {
  line-height: 40px;
}
.main .invitation_car .course_imf .inviter_ifm .inviter_ifm_detail {
  line-height: 40px;
}
.main .invitation_car .course_imf .course_detail_qrcode {
  margin-top: 22px;
  width: 164px;
  height: 164px;
  display: inline-block;
}
.main .invitation_car .course_imf .press_tips {
  margin-top: 22px;
  vertical-align: top;
  height: 164px;
  margin-left: 22px;
  padding-top: 6px;
  text-align: center;
  display: inline-block;
}
.main .invitation_car .course_imf .press_tips image {
  width: 120px;
  height: 120px;
  margin-bottom: 10px;
}
.main .invitation_car .course_imf .press_tips > view {
  font-size: 20px;
  color: #333333;
}
