/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/**居中**/
.flex{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;           /*水平居中*/
    -webkit-justify-content: center;    /*水平居中*/
    justify-content: center;            /*水平居中*/
    -webkit-box-align: center;          /*垂直居中*/
    -webkit-align-items: center;        /*垂直居中*/
    align-items: center;                /*垂直居中*/
}
/**上下居中**/
.flex_vertical{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.hidden{
  display: none;
}

._service{
    font-size: 14px;
    color: #666;
    background-color: #f2f2f2;
    padding: 15px 0 15px;
    display: block;
    width: 100%;
    letter-spacing: 1px;
    text-align: center;
}
