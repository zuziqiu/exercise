.introduce_part {
  border-bottom: 15px solid #f5f5f5;
}
.introduce_part .introduce_top {
  padding: 15px;
  position: relative;
  border-bottom: 15px solid #f5f5f5;
}
.introduce_part .introduce_top .course_tittle {
  color: #333333;
  overflow: hidden;
  font-size: 0.9rem;
  line-height: 1.3rem;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  margin: 0px auto 10px;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.introduce_part .introduce_top .course_time {
  font-size: 0.7rem;
  color: #999999;
}
.introduce_part .introduce_top .course_price {
  width: 100%;
  height: 1.1rem;
  line-height: 1.1rem;
  margin-top: 15px;
}
.introduce_part .introduce_top .course_price .present_price {
  float: left;
  color: #f34747;
  font-size: 1.1rem;
  margin-right: 0.5rem;
}
.introduce_part .introduce_top .course_price .present_price.free_course {
  color: #3ac9ab;
}
.introduce_part .introduce_top .course_price .original_price {
  float: left;
  font-size: 0.65rem;
  color: #999999;
  text-decoration: line-through;
  margin-right: 0.5rem;
  line-height: 28px;
}
.introduce_part .introduce_top .course_price .limited_indulgence {
  width: 58px;
  height: 20px;
  float: left;
  font-size: 12px;
  line-height: 20px;
  border: 1px solid #f34747;
  border-radius: 3px;
  color: #f34737;
  text-align: center;
}
.introduce_part .introduce_top .course_sign_up {
  top: 0;
  right: 0;
  display: none;
  width: 57px;
  height: 57px;
  margin-top: 6.5px;
  margin-right: 3px;
  position: absolute;
}
.introduce_part .introduce_top .course_sign_up.hidden {
  display: none;
}
.introduce_part .introduce_top .course_sign_up .sign_up_icon {
  width: 57px;
  height: 57px;
  display: block;
  background-size: 100% 100%;
}
.introduce_part .introduce_top .accept_prize {
  width: 95px;
  height: 27px;
  line-height: 27px;
  font-size: 13px;
  color: #ffffff;
  position: absolute;
  right: 0px;
  bottom: 14px;
  border-radius: 3px;
  text-align: center;
  background-color: #3ac9ab;
}
.introduce_part .partake_in {
  height: 30px;
  padding: 15px;
  line-height: 30px;
}
.introduce_part .partake_in .student_portrait {
  float: left;
  width: 30px;
  height: 30px;
  overflow: hidden;
  border-radius: 50%;
}
.introduce_part .partake_in .student_portrait:first-child {
  margin-left: 0px;
}
.introduce_part .partake_in .student_number {
  font-size: 0.7rem;
  color: #999999;
  float: left;
  margin-left: 5px;
}
.introduce_part .partake_in .my_invitation_car {
  color: #000;
  width: 100px;
  height: 30px;
  float: right;
  line-height: 30px;
  font-size: 0.65rem;
  text-align: center;
  border-radius: 30px;
  background-color: #FCD358;
}
.introduce_part .partake_in .my_invitation_car.invitation_image:before {
  content: "";
  float: left;
  width: 16px;
  height: 16px;
  display: block;
  margin-top: 6px;
  margin-left: 11px;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
